#!/bin/bash

# Hyprpicker Ã§Ä±ktÄ±sÄ±nÄ± al, sadece '#' ile baÅŸlayan satÄ±rÄ± seÃ§ ve satÄ±r baÅŸÄ±nÄ± kaldÄ±r
COLOR=$(hyprpicker | grep '^#' | tr -d '\n')

if [ -n "$COLOR" ]; then
    echo -n "$COLOR" | wl-copy
    notify-send -u normal "ğŸ¨ Color Picked" "Copied to clipboard: <b>$COLOR</b>" --icon=applications-graphics
fi

